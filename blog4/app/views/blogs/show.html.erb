<p style="color: green"><%= notice %></p>

<%= render @blog %>

<div>
  <%= link_to "Edit this blog", edit_blog_path(@blog) %> |
  <%= link_to "Back to blogs", blogs_path %>
  <p><%= button_to "Destroy this blog", @blog, method: :delete %></p>
</div>

<h2>Comments</h2>

<div id="comments">
  <%= render :partial => @blog.comments %>
</div>

<%= form_for [@blog, Comment.new] do |f| %>
  <p><%= f.label :content, "New Comment" %></p>
  <p><%= f.text_area :content, :rows => 5, :cols => 100%></p>
  <p><%= f.submit "Add Comment" %></p>
<% end %>
